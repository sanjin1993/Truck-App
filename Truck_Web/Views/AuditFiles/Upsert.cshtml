@model Truck_Web.ViewModel.AuditFileViewModel
@{
    var title = "Create Audit File";
}

<form method="post" asp-action="Upsert" enctype="multipart/form-data">

    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.AuditFile.Id != 0)
        {
            title = "Edit Audit File";
        }
        <div class="col-12 p-3">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="AuditFile.DayNo"></label>
                </div>
                <div class="col-8">
                    <input asp-for="AuditFile.DayNo" class="form-control" />
                    <span asp-validation-for="AuditFile.DayNo" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="AuditFile.NewValue"></label>
                </div>
                <div class="col-8">
                    <input asp-for="AuditFile.NewValue" class="form-control" />
                    <span asp-validation-for="AuditFile.NewValue" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    Time Sheet
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.AuditFile.TimeSheetId, Model.TimeSheetList, "-Please select a time sheet-", new { @class = "form-control" })
                    <span asp-validation-for="AuditFile.TimeSheet" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="AuditFile.FieldEnum"></label>
                </div>
                <div class="col-8">
                   <select asp-for="AuditFile.FieldEnum" asp-items="Html.GetEnumSelectList<AuditFile.Field>()" class="form-control"></select>
                </div>
            </div>

           

            <div class="form-group row">
                <div class="col-4 offset-4">
                    <button type="submit" class="btn btn-primary form-control">@(Model.AuditFile.Id!=0?"Update":"Create")</button>
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>