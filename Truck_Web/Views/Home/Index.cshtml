@model Truck_Web.ViewModel.IndexViewModel

<div class="container">
    <div class="row pb-4 backgroundWhite">

        @foreach (var timeSheet in Model.TimeSheetList)
        {
            <div class="container backgroundWhite pb-4">
                <div class="card border">
                    <div class="card-header bg-dark text-light ml-0 row container">
                        <div class="col-12 col-md-6">
                            <h1 class="text-warning">Type: @timeSheet.Type</h1>
                        </div>
                        <div class="col-12 col-md-6 text-md-right">
                            <h1 class="text-warning">Kilometer: @timeSheet.KmStand</h1>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="container rounded p-2">
                            <div class="row">
                                <div class="col-12 col-lg-8">
                                    <div class="row">
                                        <div class="col-12">
                                            <h3 style="color:#bbb9b9">Audit File: </h3>
                                        </div>
                                        <div class="col-12">
                                            @if(Model.AuditFileList.Where(u=>u.TimeSheetId == timeSheet.Id).Count()>0)
                                            {
                                                <table class="table table-striped" style="border:1px solid #808080 ">
                                                    <tr class="table-secondary">

                                                        <th>Start Time</th>
                                                        <th>End Time</th>
                                                    </tr>
                                                    @foreach (var audit in Model.AuditFileList.Where(u => u.TimeSheetId == timeSheet.Id))
                                                    {
                                                        <tr>
                                                          
                                                            <td>@audit.TimeSheet.StartTime</td>
                                                            <td>@audit.TimeSheet.EndTime</td>
                                                        </tr>
                                                    }
                                                </table>
                                            }
                                            else
                                            {
                                                <p>No audit file exists...</p>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        
    </div>
</div>