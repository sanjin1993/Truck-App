@model Truck_Web.Models.User
@{
    ViewData["Title"] = "Register";
}

<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block"><img src="https://miro.medium.com/max/498/1*Es2vCEieszU7QQqsLChl6A.png" /></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                        </div>
                        <form class="user" method="post">
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input asp-for="Username" type="text" placeholder="Username..." class="form-control form-control-user" id="exampleFirstName">
                                </div>
                                <div class="col-sm-6">
                                    <input asp-for="Password" type="password" placeholder="Password..." class="form-control form-control-user" id="exampleLastName">
                                </div>
                            </div>
                            <button type="submit" value="Submit" class="btn btn-primary btn-user btn-block">Register</button>

                            <hr>
                        </form>
                 
                        <div class="text-center">
                            <a asp-action="Login" class="small">Already have an account? Login!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
